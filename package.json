{
	"name": "movio",
	"version": "0.0.1",
	"description": "Your local movie's advisor",
	"main": "app/index.html",
	"scripts": {
		"prestart": "gulp sass",
		"start": "nw --enable-logging=stderr",
		"gulp": "gulp",
		"build": "nwbuild . -p win32,win64"
	},
	"author": {
		"name": "Guillaume HAREL",
		"email": "harel.guillaume@live.fr",
		"url": "http://gharel.me"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/gharel/movio.git"
	},
	"license": "MIT",
	"window": {
		"width": 1000,
		"height": 600,
		"min_width": 600,
		"min_height": 400
	},
	"devDependencies": {
		"allocine-api": "~0.1.9",
		"browser-sync": "~2.18.7",
		"eslint": "~3.14.1",
		"gulp": "~3.9.1",
		"gulp-csscomb": "~3.0.8",
		"gulp-rename": "~1.2.2",
		"gulp-sass": "~3.1.0",
		"gulp-sourcemaps": "~2.4.0",
		"imdb-api": "~2.2.1",
		"nw": "~0.20.0-sdk",
		"nw-builder": "~3.1.3",
		"pug": "~2.0.0-beta9"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 6
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		}
	}
